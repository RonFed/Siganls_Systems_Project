clc;
clear all;
clearvars;

T_s = 1;
t_max = 10;
num_samples = (2*t_max)/T_s + 1;
t_sampled = linspace(-t_max,t_max,num_samples);
t_cont = linspace(-t_max,t_max,num_samples * 100);

zoh_time = zeros(length(t_sampled));
for n = 1:length(t_sampled)
   if abs(t_sampled(n)) <= T_s/2
       zoh_time(n) = 1/T_s;
   end
end

